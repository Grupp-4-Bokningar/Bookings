@model IEnumerable<BookingAdminPage.Models.AdminDataModell>

@{
    ViewBag.Title = "SpecificEvent";
}


    @foreach (var item in Model)
    {
        <h2>
            @Html.DisplayFor(m => item.Event_Name)
        </h2>
        <h4>@Html.ActionLink("Skapa ny", "CreateEvent", new { id = item.Event_Id })</h4>
        break;
    }

<h3>Besökare</h3>
<table class="table table-striped">
    <tr>
        <th>
            Event ID
        </th>
        <th>
            Event namn
        </th>
        <th>
            Användar ID
        </th>
        <th>
            Användarens namn
        </th>
        <th>
            Eventroll
        <th>
            Starttid

        </th>
        <th>
            Sluttid
        </th>
    </tr>

    @foreach (var item in Model)
    {
        if (item.User_Type == "Besökare")
        {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.Event_Id)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Event_Name)
                </td>
                <td>
                    @Html.DisplayFor(m => item.User_Id)
                </td>
                <td>
                    @Html.DisplayFor(m => item.User_Name)
                </td>
                <td>
                    @Html.DisplayFor(m => item.User_Type)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Event_Start_Datetime)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Event_End_Datetime)
                </td>
                <td>
                    @Html.ActionLink("Ändra", "EditEvent", new { id = item.Booking_Id }) |
                    @Html.ActionLink("Ta bort", "DeleteEvent", new { id = item.Booking_Id })
                </td>
            </tr>
        }

    }
</table>
