@model BookingAdminPage.Models.BookingModel
@{
    ViewBag.Title = "Create";
}

<h2>Skapa</h2>

@using (Html.BeginForm("CreateEvent", "EventPeople", FormMethod.Post))
{
    <div class="form-horizontal">

        <div class="form-group form-group-lg">
            <label>Event ID</label>
            @Html.EditorFor(model => model.Event_Id, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="form-group form-group-lg">
            <label>User ID</label>
            @Html.EditorFor(model => model.User_Id, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="form-group form-group-lg">
            <label>User type</label>
            @Html.EditorFor(model => model.User_Type, new { htmlAttributes = new { @class = "form-control" } })
        </div>


        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Spara" class="btn btn-info" /> | @Html.ActionLink("Tillbaka", "SpecificEvent", new { id= Model.Event_Id})
        </div>

    </div>
}