@model BookingAdminPage.Models.BookingModel
@{
    ViewBag.Title = "Edit";
}

<h2>Ändra</h2>
@using (Html.BeginForm("Update", "Home", FormMethod.Post))
{
<div class="form-horizontal">

    @Html.HiddenFor(m => Model.Booking_Id)

    <div class="form-group form-group-lg">
        <label>Event ID</label>
        @Html.DropDownList("Event_Id", new SelectList(ViewBag.Event, "Event_Id", "Event_Name"), new { htmlAttributes = new { @class = "form-control" }, @onchange = "setEventId(this.value)" })
        @Html.EditorFor(model => model.Event_Id, new { htmlAttributes = new { @class = "form-control", id = "event" } })
    </div>

    <div class="form-group form-group-lg">
        <label>User ID</label>
        @Html.DropDownList("Id", new SelectList(ViewBag.User, "Id", "Lastname"), new { htmlAttributes = new { @class = "form-control" }, @onchange = "setUserId(this.value)" })
        @Html.EditorFor(model => model.User_Id, new { htmlAttributes = new { @class = "form-control", id = "User" } })
    </div>

    <div class="form-group form-group-lg">
        <label>User type</label>
        @Html.EditorFor(model => model.User_Type, new { htmlAttributes = new { @class = "form-control" } })
    </div>


    <div class="col-md-offset-2 col-md-10">
        <input type="submit" value="Spara" class="btn btn-info" /> | @Html.ActionLink("Tillbaka", "Index")
    </div>

</div>
}
<script>
    function setEventId(eId) {
        document.getElementById("event").value = eId;
    }
    function setUserId(uId) {
        document.getElementById("User").value = uId;
    }
</script>
